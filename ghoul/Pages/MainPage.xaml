<Page x:Class="ghoul.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ghoul.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="900"
      Title="MainPage">

    <Grid>

        <Image Source="/pics/background.png" Grid.ColumnSpan="80" Grid.RowSpan="80"  Stretch="Fill"/>
        <Image Source="/pics/dashboard.png" Grid.ColumnSpan="16" Grid.Row="0" Grid.RowSpan="80" Stretch="Fill"/>
        <Image Source="/pics/textbackground.png" Grid.ColumnSpan="30" Grid.RowSpan="49" Grid.Row="18" Grid.Column="19"/>
        <Image Source="/pics/text.png" Grid.ColumnSpan="27" Grid.RowSpan="45" Grid.Row="20" Grid.Column="20"/>
        <Image Source="/pics/picbackground.png" Grid.ColumnSpan="27" Grid.RowSpan="70" Grid.Row="5" Grid.Column="51"/>

        <Image x:Name="kanekich" Grid.ColumnSpan="27" Grid.RowSpan="70" Grid.Row="5" Grid.Column="51" Cursor="Help">
            <Image.Style>
                <Style TargetType="Image">
                    <Setter Property="Source" Value="/pics/kaneki1.png" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Source" Value="/pics/kaneki2.png"/>
                            <Setter Property="Grid.Column" Value="49"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
        <Image Source="/pics/logo.png" Grid.ColumnSpan="12" Grid.RowSpan="16" Grid.Column="2" Grid.Row="2"/>
        <Image Source="/pics/buttonbackground.png" Grid.ColumnSpan="12" Grid.RowSpan="8" Grid.Column="2" Grid.Row="22" />
        <Image Source="/pics/mainpagebutton.png" Grid.ColumnSpan="10" Grid.RowSpan="8" Grid.Column="3" Grid.Row="22"/>
        <Image Source="/pics/buttonbackground.png" Grid.ColumnSpan="12" Grid.RowSpan="8" Grid.Column="2" Grid.Row="32"/>
        <Image Source="/pics/characterspagebutton.png" Grid.ColumnSpan="10" Grid.RowSpan="9" Grid.Column="3" Grid.Row="32"/>
        <Image Source="/pics/buttonbackground.png" Grid.ColumnSpan="12" Grid.RowSpan="8" Grid.Column="2" Grid.Row="42"/>
        <Image Source="/pics/quotespagebutton.png" Grid.ColumnSpan="10" Grid.RowSpan="8" Grid.Column="3" Grid.Row="42"/>
        <Image Source="/pics/buttonbackground.png" Grid.ColumnSpan="12" Grid.RowSpan="8" Grid.Column="2" Grid.Row="52"/>
        <Image Source="/pics/watchpagebutton.png" Grid.ColumnSpan="10" Grid.RowSpan="8" Grid.Column="3" Grid.Row="52"/>

        <Button x:Name="MainWindowButton"
                Click="MainPage_Button"
                Grid.Row="22"
                Grid.Column="2"
                Grid.ColumnSpan="12"
                Grid.RowSpan="8"
                Height="Auto"
                Width="Auto"
                Cursor="Hand"
                Opacity="0"/>

        <Button x:Name="CharactersButton"
                Click="CharactersPage_Button"
                Grid.Row="32"
                Grid.Column="2"
                Grid.ColumnSpan="12"
                Grid.RowSpan="8"
                Width="Auto"
                Height="Auto"
                Cursor="Hand"
                Opacity="0"/>

        <Button x:Name="QuotesButton"
